QMainWindow {
    background: #121212;
}

QWidget#appRoot {
    background: #121212;
}

QWidget {
    background: transparent;
    color: #E2E8F0;
    font-family: "Roboto", "Segoe UI", sans-serif;
    font-size: 13px;
}

QLabel#kpiTitle {
    color: #9FB0C4;
    font-size: 12px;
}

QLabel#kpiValue {
    font-size: 18px;
    font-weight: 700;
}

QFrame#kpiCard {
    background: qlineargradient(
        x1:0, y1:0, x2:1, y2:1,
        stop:0 #1B2531,
        stop:1 #141C25
    );
    border: 1px solid rgba(120, 160, 200, 0.20);
    border-radius: 14px;
    padding: 10px;
}

QFrame#navPanel {
    background: #1F2A36;
    border: 1px solid rgba(120, 160, 200, 0.16);
    border-radius: 16px;
    padding: 8px;
}

QPushButton#navBtn {
    text-align: left;
    padding: 12px 14px;
    border-radius: 12px;
    background: transparent;
    border: none;
    color: #9FB0C4;
}

QPushButton#navBtn:checked {
    background: qlineargradient(
        x1:0, y1:0, x2:1, y2:0,
        stop:0 #3D5AFE,
        stop:1 #60A5FA
    );
    color: #FFFFFF;
}

QPushButton#navBtn:hover {
    background: rgba(80, 120, 200, 0.14);
    color: #DCE7F3;
}

QPushButton#navBtn:pressed,
QPushButton#navBtn:checked:hover {
    background: qlineargradient(
        x1:0, y1:0, x2:1, y2:0,
        stop:0 #3D5AFE,
        stop:1 #60A5FA
    );
    color: #FFFFFF;
}

QPushButton#actionBlendBtn {
    text-align: center;
    padding: 7px 12px;
    border-radius: 10px;
    background: transparent;
    border: 1px solid rgba(120, 160, 200, 0.22);
    color: #C8D6E5;
    font-weight: 600;
}

QPushButton#actionBlendBtn:hover {
    background: rgba(80, 120, 200, 0.14);
    color: #EAF2FA;
}

QPushButton#actionBlendBtn:pressed {
    background: qlineargradient(
        x1:0, y1:0, x2:1, y2:0,
        stop:0 #3D5AFE,
        stop:1 #60A5FA
    );
    border: 1px solid #4D8FD2;
    color: #FFFFFF;
}

QLabel#themeLabel {
    color: #C8D6E5;
    font-weight: 600;
}

QSlider#themeToggle {
    min-width: 58px;
    max-width: 58px;
    min-height: 30px;
    max-height: 30px;
}

QSlider#themeToggle::groove:horizontal {
    width: 58px;
    height: 30px;
    border-radius: 15px;
    background: #2A3645;
    border: 1px solid #314255;
}

QSlider#themeToggle::sub-page:horizontal {
    background: #2A3645;
    border-radius: 15px;
}

QSlider#themeToggle::add-page:horizontal {
    background: #3D5AFE;
    border-radius: 15px;
}

QSlider#themeToggle::handle:horizontal {
    background: #FFFFFF;
    width: 22px;
    margin: 3px;
    border-radius: 11px;
    border: 1px solid #D8E3EE;
}

QStackedWidget#contentStack {
    border: 1px solid rgba(120, 160, 200, 0.16);
    border-radius: 16px;
    background: #1F2A36;
}

QPushButton {
    background: qlineargradient(x1:0, y1:0, x2:1, y2:0, stop:0 #3D5AFE, stop:1 #60A5FA);
    color: #FFFFFF;
    border: 1px solid #4D8FD2;
    border-radius: 7px;
    padding: 7px 12px;
}

QPushButton:hover {
    background: #3D5AFE;
}

QPushButton:pressed {
    background: #2E4CE0;
}

QComboBox {
    background: #1F2A36;
    border: 1px solid #314255;
    border-radius: 7px;
    padding: 5px 8px;
    color: #D8E3EE;
}

QComboBox::drop-down {
    border: none;
    width: 18px;
    background: transparent;
}

QComboBox::down-arrow {
    image: none;
    width: 0;
    height: 0;
}

QComboBox QAbstractItemView {
    background: #1F2A36;
    color: #E2E8F0;
    border: 1px solid #314255;
    selection-background-color: #3D5AFE;
    selection-color: #FFFFFF;
    outline: 0;
}

QTableWidget {
    background: #1F2A36;
    border: 1px solid rgba(120, 160, 200, 0.18);
    border-radius: 12px;
    gridline-color: #2B3A4A;
    alternate-background-color: #263646;
    color: #E2E8F0;
}

QDialog {
    background: #121212;
    color: #E2E8F0;
}

QGroupBox {
    background: #1F2A36;
    border: 1px solid #314255;
    border-radius: 10px;
    margin-top: 12px;
    padding: 10px;
    font-weight: 600;
}

QGroupBox::title {
    subcontrol-origin: margin;
    left: 10px;
    padding: 0 4px;
    color: #D8E3EE;
}

QLineEdit, QTextEdit, QDateEdit, QSpinBox, QDoubleSpinBox {
    background: #1F2A36;
    border: 1px solid #314255;
    border-radius: 7px;
    padding: 5px 8px;
    color: #E2E8F0;
}

QHeaderView::section {
    background: #1D2B39;
    color: #D6E0EA;
    border: none;
    padding: 8px;
    font-weight: 700;
}

QHeaderView::section:vertical {
    background: #1D2B39;
    color: #AFC1D4;
}

QTableCornerButton::section {
    background: #1D2B39;
    border: none;
}

QStatusBar {
    background: #1D2B39;
    border-top: 1px solid #2A394B;
}
