# EquityJournal - Environment Configuration
# Copy this file to .env and fill in your values

# AI Provider (choose one: groq, claude, openai, local)
AI_PROVIDER=groq

# API Keys (only fill in the one you're using)
# Groq API (Free tier - recommended for development)
GROQ_API_KEY=your_groq_api_key_here

# Claude API (Anthropic - recommended for production)
CLAUDE_API_KEY=your_claude_api_key_here

# OpenAI API (optional)
OPENAI_API_KEY=your_openai_api_key_here

# Database Path
DATABASE_PATH=data/equity_tracker.db

# Alert Settings
ALERT_CHECK_INTERVAL=3600  # Check for alerts every hour (in seconds)

# Stock Data Settings
PRICE_UPDATE_INTERVAL=300  # Update prices every 5 minutes (in seconds)
BSE_RSS_URLS=https://www.bseindia.com/data/xml/announcements.xml
BSE_API_ENDPOINT=https://api.bseindia.com/BseIndiaAPI/api/AnnSubCategoryGetData/w
BSE_ATTACH_PRIMARY_BASE=https://www.bseindia.com/xml-data/corpfiling/AttachLive/
BSE_ATTACH_SECONDARY_BASE=https://www.bseindia.com/xml-data/corpfiling/AttachHis/
BSE_HISTORY_START_DATE=20260101
BSE_API_MAX_PAGES=200
BSE_BHAVCOPY_URL_TEMPLATE=https://www.bseindia.com/download/BhavCopy/Equity/BhavCopy_BSE_CM_0_0_0_{date}_F_0000.csv
BSE_BHAVCOPY_CACHE_DIR=BhavCopy

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs

# App Settings
APP_NAME=EquityJournal
DEBUG_MODE=True
UI_GLOW_PRESET=medium  # subtle | medium | bold
ENABLE_ADMIN_REGENERATE=True
